<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuDepartamento">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="174dp"
        android:layout_height="194dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/registro_departamento" />

    <Button
        android:id="@+id/bnt_reg_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="REGISTRAR"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btn_act_departametnto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="ACTUALIZAR"
        app:layout_constraintEnd_toEndOf="@+id/bnt_reg_departamento"
        app:layout_constraintStart_toStartOf="@+id/bnt_reg_departamento"
        app:layout_constraintTop_toBottomOf="@+id/bnt_reg_departamento" />

    <Button
        android:id="@+id/btn_elim_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="ELIMINAR"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_departametnto"
        app:layout_constraintStart_toStartOf="@+id/btn_act_departametnto"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_departametnto" />

    <Button
        android:id="@+id/btn_mostr_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="MOSTRAR"
        app:layout_constraintEnd_toEndOf="@+id/btn_elim_departamento"
        app:layout_constraintStart_toStartOf="@+id/btn_elim_departamento"
        app:layout_constraintTop_toBottomOf="@+id/btn_elim_departamento" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPARTAMENTO"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR A MENU EMPLEADO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>