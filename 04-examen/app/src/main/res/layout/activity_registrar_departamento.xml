<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarDepartamento">

    <TextView

        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE DEP.:"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nom_dep"
        app:layout_constraintEnd_toEndOf="@+id/textView20"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.696" />

    <Button

        android:id="@+id/btn_registrar_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="64dp"
        android:text="REGISTRAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nun_dep" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="REGISTRAR DEPARTAMENTO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/txt_cod_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="COD. DEPARTAMENTO"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/txt_nun_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NUM. DEPARTAMENTO"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/estado_depa"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/estado_depa"
        app:layout_constraintTop_toBottomOf="@+id/estado_depa" />

    <EditText
        android:id="@+id/txt_cui_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CUIDAD"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_nom_dep"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nom_dep"
        app:layout_constraintTop_toBottomOf="@+id/txt_nom_dep" />

    <Switch

        android:id="@+id/estado_depa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/txt_cui_dep"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="@+id/txt_cui_dep"
        app:layout_constraintTop_toBottomOf="@+id/txt_cui_dep" />

    <EditText

        android:id="@+id/txt_nom_dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NOMBRE DEP."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_cod_dep"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_cod_dep"
        app:layout_constraintTop_toBottomOf="@+id/txt_cod_dep" />

    <TextView

        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="92dp"
        android:text="COD. DEPARTAMENTO:"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cod_dep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textView21"
        android:layout_width="68dp"
        android:layout_height="19dp"
        android:text="CUIDAD:"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cui_dep"
        app:layout_constraintEnd_toEndOf="@+id/textView23"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        app:layout_constraintVertical_bias="0.527" />

    <TextView

        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUM. DEPARTAMENTO:"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nun_dep"
        app:layout_constraintEnd_toEndOf="@+id/textView24"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        app:layout_constraintVertical_bias="0.629" />

    <Button

        android:id="@+id/btn_cancelar_registrar_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="87dp"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="@+id/btn_registrar_departamento"
        app:layout_constraintEnd_toStartOf="@+id/btn_registrar_departamento"
        app:layout_constraintTop_toTopOf="@+id/btn_registrar_departamento" />

    <TextView

        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTADO:"
        app:layout_constraintBottom_toBottomOf="@+id/estado_depa"
        app:layout_constraintEnd_toEndOf="@+id/textView21"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>